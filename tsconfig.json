{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["./services/*"],
      "@schemas/*": ["./db/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__"]
}